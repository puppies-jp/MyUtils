{

  "manifest_version": 2,
  "name": "Chat Rec",
  "version": "1.0",

  "description": "",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/listUp.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon":"img/icon.png",
    "default_title": "ChatRec",
    "default_popup": "menu.html"
  },
  "sidebar_action": {
    "default_icon":"img/icon.png",
    "default_title": "My sidebar",
    "default_panel": "menu.html"
  }
}

